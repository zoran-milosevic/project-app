{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (API)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/backend/ProjectApp/ProjectApp.API/bin/Debug/net5.0/ProjectApp.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/backend/ProjectApp/ProjectApp.API",
            "console": "internalConsole",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\\\bNow listening on:\\\\s+(https?://\\\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Angular",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "angularcli",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/src/frontend/client",
            "sourceMaps": true
        }
    ],
    "compounds": [
        {
            "name": "Run All Projects",
            "configurations": [
                ".NET Core Launch (API)",
                "Angular"
            ]
        }
    ]
}